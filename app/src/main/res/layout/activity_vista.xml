<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eamc0.tarea2.VistaActivity">

    <TextView
        android:text="Confirmar datos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textViewTitulo"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:text="@string/Nombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitulo"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewNombre"
        android:textAlignment="inherit"
        android:textSize="15sp" />

    <TextView
        android:text="@string/FechaNacimiento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNombre"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewFechaNacimiento"
        android:textAlignment="inherit"
        android:textSize="15sp" />

    <TextView
        android:text="@string/Telefono"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFechaNacimiento"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewTelefono"
        android:textAlignment="inherit"
        android:textSize="15sp" />

    <TextView
        android:text="@string/Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTelefono"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewEmail"
        android:textAlignment="inherit"
        android:textSize="15sp" />

    <TextView
        android:text="@string/Descripcion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmail"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewDescripcion"
        android:textAlignment="inherit"
        android:textSize="15sp" />

    <Button
        android:text="@string/Edicion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDescripcion"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="50dp"
        android:theme ="@style/MiBotonRaised"
        android:id="@+id/buttonEditar" />


</RelativeLayout>
